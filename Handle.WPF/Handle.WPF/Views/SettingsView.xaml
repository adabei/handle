<UserControl x:Class="Handle.WPF.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="419" d:DesignWidth="570">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <TextBlock FontSize="22" Grid.Row="0">settings</TextBlock>
    <TabControl  x:Name="SettingsTabControl" Grid.Row="1">
      <TabItem Header="General" x:Name="GeneralTabItem">
      </TabItem>
      <TabItem Header="Display" x:Name="DisplayTabItem">
      </TabItem>
      <TabItem Header="Notifications" x:Name="NotificationsTabItem">
      </TabItem>
      <TabItem Header="Updates" x:Name="UpdatesTabItem">
      </TabItem>
    </TabControl>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2">
      <Button Content="Save" Height="Auto"  x:Name="Save"  Width="Auto" />
      <Button Content="Cancel" Height="Auto"  x:Name="Cancel"  Width="Auto" />
    </StackPanel>
  </Grid>
</UserControl>
