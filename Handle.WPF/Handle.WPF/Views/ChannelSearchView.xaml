<Window x:Class="Handle.WPF.ChannelSearchView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChannelSearchView" Height="300" Width="500"
        xmlns:cal="http://www.caliburnproject.org">
    <Grid ShowGridLines="True">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
     
    <TextBlock Text="channels" FontSize="22" Grid.Row="0"/>
    <StackPanel Grid.Row="1" Orientation="Horizontal">
      <TextBox x:Name="Pattern" Height="Auto" Width="430"/>
      <Button x:Name="Filter" Content="Filter" Width="Auto" Height="Auto" HorizontalAlignment="Right"/>
    </StackPanel>
    <ListView x:Name="Channels" Grid.Row="2">
      <ListView.View>
        <GridView>
          <GridViewColumn Width="Auto" Header="Name" DisplayMemberBinding="{Binding Name}"/>
          <!--  <GridViewColumn Width="Auto" Header="Users" DisplayMemberBinding="{Binding VisibleUsersCount}"/>-->
          <GridViewColumn Width="Auto" Header="Topic" DisplayMemberBinding="{Binding Topic}"/>
        </GridView>
      </ListView.View>
    </ListView>
    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button x:Name="Join" Content="Join" Width="Auto" Height="Auto"/>
      <Button x:Name="Cancel" Content="Cancel" Width="Auto" Height="Auto"/>
    </StackPanel>
      
    
  </Grid>
</Window>
