      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      xmlns:cal="http://www.caliburnproject.org">

    <Grid ShowGridLines="True">
      <Grid.ColumnDefinitions>
      </Grid.ColumnDefinitions>

      <Grid.RowDefinitions>
