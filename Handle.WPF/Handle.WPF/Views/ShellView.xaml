<Window x:Class="Handle.WPF.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org" Title="Handle" 
        WindowStyle="None" ResizeMode="CanResizeWithGrip" AllowsTransparency="True"
        Width="600" Height="320">
  
  <Window.Resources>
    <Style x:Key="WindowStateButton" TargetType="Button">
      <Setter Property="Width" Value="30"/>
      <Setter Property="FontFamily" Value="Webdings"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>
  </Window.Resources>
  
  <Grid ShowGridLines="True"> 
    
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    
    <Grid.RowDefinitions>
      <RowDefinition Height="40"/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    
    <Canvas Grid.Column="2" Grid.Row="0">
      <Button x:Name="Minimize" Canvas.Right="60"  Style="{StaticResource WindowStateButton}">0</Button>
      <Button x:Name="Restore" Canvas.Right="30" Style="{StaticResource WindowStateButton}">1</Button>
      <Button x:Name="Exit" Canvas.Right="0" Style="{StaticResource WindowStateButton}">r</Button>
    </Canvas>

  </Grid>
</Window>

